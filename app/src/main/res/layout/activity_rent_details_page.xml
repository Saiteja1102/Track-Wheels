<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RentDetailsPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/menu1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Track Wheels"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_width="359dp"
        android:layout_height="207dp"
        android:orientation="vertical"
        android:background="@drawable/custom_btn_blue">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scorpionbg12"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/inter"
            android:text="MAHINDRA"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Scorpio N"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="The Mahindra Scorpio N is a diesel-powered 7-seater SUV with manual transmission, available for rent at ₹4,200 per day. It requires a refundable security deposit of ₹10,000. To rent the vehicle, customers need to provide a valid driving license, along with an Aadhar card or passport ID, and a blank cheque. It's a great choice for group travel with comfort and power."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Price Per Day: "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/inter"
            android:text="₹4200"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/getstarted_btn"
        android:layout_width="337dp"
        android:layout_height="60dp"
        android:background="#3838FF"
        android:layout_margin="30dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Add to Cart"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />

</LinearLayout>